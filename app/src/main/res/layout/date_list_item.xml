<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/date_list_item"
    android:clickable="false">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="вт 31"
        android:clickable="false"
        android:id="@+id/date_list_item_date"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Янв"
        android:gravity="right"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/date_list_item_date"
        android:id="@+id/date_list_item_month"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015 Янв вт 31"
        android:gravity="right"
        android:id="@+id/date_list_item_year"
        android:textColor="@color/blue_text_color"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/date_list_item_date" />
</RelativeLayout>

